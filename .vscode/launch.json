{
    // TODO Configure linux
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CS_DEBUG",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/netcoreapp3.1/Sketchbook.dll",
            "args": ["--no-restore"],
            "cwd": "${workspaceFolder}",
            "console": "externalTerminal",
            "stopAtEntry": false,
            "preLaunchTask": "dotnet-build",
            "linux": {
                "console": "integratedTerminal"
            }
        },
        {
            "name": "CS_LAUNCH",
            "type": "coreclr",
            "request": "launch",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "windows": {
                "externalConsole": true,
                "program": "C:\\Windows\\system32\\cmd.exe",
                "args": [
                    "/k",
                    "dotnet run",
                    "--no-restore",
                    "/p:StartupObject=${fileBasenameNoExtension}.Program",
                    "&",
                    "ECHO.",
                    "&",
                    "PAUSE",
                    "&",
                    "EXIT"
                ]
            },
            "linux": {
                "externalConsole": true,
                "program": "dotnet",
                "args":[
                    "run",
                    "--no-restore",
                    "/p:StartupObject=${fileBasenameNoExtension}.Program",
                ]
            },
            "preLaunchTask": "dotnet-build"
        },
        {
            "name": "CPP_LAUNCH",
            "request": "launch",
            "program": "${workspaceFolder}/${relativeFileDirname}/${fileBasenameNoExtension}.out",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "type": "cppvsdbg",
            "externalConsole": true,
            "windows": {
                "program": "C:\\Windows\\system32\\cmd.exe",
                "args": [
                    "/k",
                    "${workspaceFolder}/${relativeFileDirname}/${fileBasenameNoExtension}.out",
                    "&",
                    "ECHO.",
                    "&",
                    "ECHO.",
                    "&",
                    "PAUSE",
                    "&",
                    "EXIT"
                ]
            },
            "linux": {
                "type": "cppdbg"
            },
            "preLaunchTask": "cpp-compile",
        },
        {
            "name": "CPP_DEBUG",
            "type": "cppdbg",
            "request": "launch",
            "stopAtEntry": false,
            "program": "${workspaceFolder}/${relativeFileDirname}/${fileBasenameNoExtension}.out",
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "gdb",
            "windows": {
                "externalConsole": true,
                "miDebuggerPath": "C:\\mingw\\bin\\gdb.exe",
            },
            "linux": {      
                "externalConsole": false,
                "miDebuggerPath": "/usr/bin/gdb",
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "cpp-compile"
        }
    ],
}