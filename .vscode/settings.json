{
   // Theme
   "workbench.colorTheme": "Default Dark+",
   "workbench.iconTheme": "vs-seti",
   "workbench.sideBar.location": "right",
   
   // Exclude files
   "files.exclude": {
      "**/.git": true,
      "**/.gitignore": true,
      "**/*.out": true,
      "**/*.exe": true,
      "**/*.csproj": true,
      ".vscode": true,
      "**/README.*": true,
      "**/obj" : true,
      "**/bin" : true,
      "**/csproj" : true
   },
   
   // Explorer
   "workbench.tree.indent": 16,
   "explorer.confirmDragAndDrop": false,
   "explorer.sortOrder": "type",
   
   // Editor
   "breadcrumbs.enabled": true,
   "editor.wordWrap": "on",
   "editor.mouseWheelZoom": true,
   "editor.acceptSuggestionOnEnter": "off", 
   
   // Visual junk
   "editor.minimap.enabled": false,  
   "editor.hideCursorInOverviewRuler": true,
   "editor.scrollbar.horizontal": "hidden",
   "editor.scrollbar.vertical": "hidden",
   "editor.overviewRulerBorder": false,
   "editor.renderControlCharacters": false,
   "vtools.autoHideBottomBar": true,
   "vtools.autoHideDelay": 0,

   // Cursor
   "editor.cursorSmoothCaretAnimation": true,
   "editor.cursorBlinking": "smooth",
   
   // C#
   "omnisharp.enableRoslynAnalyzers": true,

   // Tabs
   "workbench.editor.showTabs": true,
   "workbench.editor.highlightModifiedTabs": true,
   "workbench.editor.tabSizing": "shrink",

   // Bars
   "workbench.activityBar.visible": false,
   "workbench.statusBar.visible": false,
   "workbench.statusBar.feedback.visible": false,
   "window.menuBarVisibility": "hidden",
   
   // Files associations
   "files.associations": {
      "*.rmd": "markdown",
      "iostream": "cpp",
      "istream": "cpp",
      "ostream": "cpp",
      "array": "cpp",
      "functional": "cpp",
      "tuple": "cpp",
      "type_traits": "cpp",
      "utility": "cpp",
      "xtr1common": "cpp",
      "algorithm": "cpp",
      "cstdlib": "cpp",
      "xutility": "cpp",
      "atomic": "cpp",
      "*.tcc": "cpp",
      "cctype": "cpp",
      "clocale": "cpp",
      "cmath": "cpp",
      "cstdarg": "cpp",
      "cstddef": "cpp",
      "cstdint": "cpp",
      "cstdio": "cpp",
      "cstring": "cpp",
      "cwchar": "cpp",
      "cwctype": "cpp",
      "deque": "cpp",
      "list": "cpp",
      "unordered_map": "cpp",
      "vector": "cpp",
      "exception": "cpp",
      "iterator": "cpp",
      "memory": "cpp",
      "memory_resource": "cpp",
      "numeric": "cpp",
      "optional": "cpp",
      "random": "cpp",
      "string": "cpp",
      "string_view": "cpp",
      "system_error": "cpp",
      "fstream": "cpp",
      "initializer_list": "cpp",
      "iosfwd": "cpp",
      "limits": "cpp",
      "new": "cpp",
      "sstream": "cpp",
      "stdexcept": "cpp",
      "streambuf": "cpp",
      "typeinfo": "cpp",
      "ios": "cpp",
      "queue": "cpp",
      "xfacet": "cpp",
      "xhash": "cpp",
      "xiosbase": "cpp",
      "xlocale": "cpp",
      "xlocinfo": "cpp",
      "xlocnum": "cpp",
      "xmemory": "cpp",
      "xmemory0": "cpp",
      "xstddef": "cpp",
      "xstring": "cpp",
      "unordered_set": "cpp",
      "bitset": "cpp",
      "map": "cpp",
      "xtree": "cpp"
   },

   // Debugging and launching
   "autoDebug" : true,
   "autoLaunch" : true,
}